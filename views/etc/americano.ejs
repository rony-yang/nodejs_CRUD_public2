<!DOCTYPE html>
<html lang='en'>
<head>
  <meta charset='utf-8' />
  <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="js/main_contents.js"></script>
  <style>
    /* 달력 컨테이너와 추가 요소를 가로로 나란히 나타내기 위한 스타일 */
    .container {
      display: flex;
    }
    .fc .fc-daygrid-day-top {
      display: flex;
      flex-direction: row;
    }
    #calendar {
      width: 50%; /* 달력이 차지하는 너비 */
    }
    #add_contents {
      width: 25%; /* 추가 콘텐츠가 차지하는 너비 */
      padding: 0 10px; /* 좌우에 10px의 패딩 추가 */
      display: flex; /* 내부 요소를 정렬하기 위해 사용 */
      justify-content: center; /* 가운데 정렬 */
    }

    /* 체크박스 스타일 */
    .checkbox-container {
      margin-top: 10px;
    }
    .checkbox-container input[type="checkbox"] {
      display: none;
    }
    .checkbox-container input[type="checkbox"] + label {
      cursor: pointer;
      display: inline-block;
      width: 1em;
      height: 1em;
      border: 1px solid #ccc;
      border-radius: 3px;
      vertical-align: middle;
    }
    .checkbox-container input[type="checkbox"]:checked + label {
      background-color: #007bff;
    }

  </style>
  <script>

    document.addEventListener('DOMContentLoaded', function() {
      var selectedDate = null;

      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        selectable: true,
        dayCellContent: function(arg) {
          // 각 날짜 셀마다 날짜와 빈 체크박스를 함께 추가
          var checkbox = document.createElement('input');
          checkbox.type = 'checkbox'; 
          checkbox.className = 'calendar-checkbox';
          checkbox.id = 'checkbox-' + arg.dateStr;
          var label = document.createElement('label');
          label.htmlFor = checkbox.id;
          // label.textContent = '성공'; // 체크박스와 같이 뜨는 문구
          
          // div 요소를 생성하여 날짜와 체크박스를 넣음
          var container = document.createElement('div');
          var dateDiv = document.createElement('div');
          dateDiv.appendChild(document.createTextNode(arg.dayNumberText)); // 날짜 표시
          var checkboxDiv = document.createElement('div');
          checkboxDiv.appendChild(checkbox);
          checkboxDiv.appendChild(label);
          container.appendChild(dateDiv);
          container.appendChild(checkboxDiv);

          return { html: container.innerHTML };
        },
        
        select: function(info) {
          // 날짜를 선택할 때 실행되는 코드
          console.log('111');
          var dateStr = info.startStr; // 선택된 날짜
          var data = { date: dateStr, checked: true }; // 체크된 상태로 저장
          console.log(data);
          saveDataToJson(data);
          selectedDate = dateStr; // 이전에 선택된 날짜 갱신
        },
        unselect: function() {
          // 날짜 선택 해제될 때 실행되는 코드
          if (selectedDate) {
            var data = { date: selectedDate, checked: false }; // 해제된 상태로 저장
            console.log(data);
            saveDataToJson(data);
            selectedDate = null; // 이전에 선택된 날짜 초기화
            console.log(selectedDate);
          }
        }
      });
    
      calendar.render();

      // JSON 데이터를 파일에 저장하는 함수
      function saveDataToJson(data) {

        let selected_date = data.date;
        let selected_value = data.checked;

        $.ajax({
          url: "cal_checked",
          type: "POST",
          data: {
            selected_date: selected_date,
            selected_value: selected_value
          },
          dataType: "json",
          success: function(result) {
            printValue(result);
          },
          error: function(request, status, error) {
            console.error(error);
          }
        });
      }
    });
    
    

  </script>
</head>
<body>
  <div class="container">
    <div id='calendar'></div>
    <div id='add_contents'>
      <p>ddddddddddddddddddddddddddddddddddddddd</p>
    </div>
  </div>
</body>
</html>
